<!-- Line Chart - Single Series -->
<div class="col-xs-12">
  <h3>Visits By Day</h3>
  <%= line_chart visits_by_day_home_path %>
</div>

<div id="grad">
<table width="100%">
  <tr>
    <td>
      <div style="width:400px;height:200px;overflow: scroll;">
      
      <ul>
      <%= @visits.each do |visit| %>
      <li><%= visit.country%></li> 
      <% end %>
      </ul>
      </div>
    </td>
    <td>  
    <!-- Pie Chart -->
  <div class="col-xs-6">
    <h3>Total Visits by Country</h3>
    <%= pie_chart @visits.group(:country).count %>
  </div></td>
  </tr>
  <tr>
  <td colspan="2">  
  <!-- Bar Chart --> 
  <div class="col-xs-6">
    <h3>Total Visits Per Country</h3>
    <%= bar_chart @visits.group(:country).count %>
  </div>
</div>
</td>
  </tr>
</table>
</div>
